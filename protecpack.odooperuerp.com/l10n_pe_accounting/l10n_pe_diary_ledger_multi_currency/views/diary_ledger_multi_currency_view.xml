<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="diary_ledger_multi_currency_view_form" model="ir.ui.view">
            <field name="name">Libro Diario-Mayor Multi-Moneda</field>
            <field name="model">diary.ledger.multi.currency</field>
            <field name="arch" type="xml">
                <form>
                    
                    <header>
                        <button name="generated_book"
                                string="GENERAR LIBRO"
                                class="oe_highlight"
                                type="object"
                                icon="fa-book"
                        />

                        <button name="action_draft"
                            string="Borrador"
                            invisible="state not in ['generated']"
                            type="object"
                            />


                         <button name="action_print" 
                            string="IMPRIMIR"
                            type="object"
                            class="oe_highlight"
                            invisible="state not in ['generated']"
                            icon="fa-print"
                            />

                        <button name="button_view_tree" 
                            string="VISTA DINÁMICA" 
                            invisible="state not in ['generated']"
                            type="object" 
                            class="oe_highlight"
                            icon="fa-bars"/>

                        <field name="state" widget="statusbar" statusbar_visible="draft,generated" />
                    </header>

                    <!-- #################################################################### -->
                    <group name="grupo_base_diary_ledger_multi_currency" invisible="state != 'draft'">

                        <group string="Fecha - Periodo Fiscal">
                            
                            <field name="company_id" options="{'no_create': True, 'no_create_edit':True}" groups="base.group_multi_company"/>

                            <field name="name"/>

                            <field name="period"/>
                            <label for="fiscal_year" invisible="period == False"/>
                            <div invisible="period == False">
                                <field name="fiscal_year" placeholder="Año" class="oe_inline" invisible="period == False" required="period == True"/>
                                <field name="fiscal_month" placeholder="Mes" class="oe_inline" invisible="period == False" required="period == True"/>
                            </div>

                            <field name="date"/>
                            <field name="date_from" invisible = "date == False" required="date ==  True"/>
                            <field name="date_to" invisible = "date == False" required="date == True"/>

                            <!--<br/>

                            <field name="type_saldos_in_me" readonly = "state not in ['draft']"/>-->

                        </group>


                        
                        <group name="Filtros_dinamicos" string='Filtros dinámicos'>

                             <label for="account_ids"/>
                            <div>
                                <field name="account_option" placeholder="" class="oe_inline" readonly = "state not in ['draft']"/>
                                <field name="account_ids" placeholder="" class="oe_inline" widget="many2many_tags" options="{'no_create': True}" readonly = "state not in ['draft']"/>
                            </div>                           

                            <label for="partner_ids"/>
                            <div>
                                <field name="partner_option" placeholder="" class="oe_inline" readonly = "state not in ['draft']"/>
                                <field name="partner_ids" placeholder="" class="oe_inline" widget="many2many_tags" options="{'no_create': True}" readonly = "state not in ['draft']"/>
                            </div>

                            <label for="journal_ids"/>
                            <div>
                                <field name="journal_option" placeholder="" class="oe_inline" readonly = "state not in ['draft']"/>
                                <field name="journal_ids" placeholder="" class="oe_inline" widget="many2many_tags" options="{'no_create': True}" readonly = "state not in ['draft']"/>
                            </div>

                            <label for="move_ids"/>
                            <div>
                                <field name="move_option" placeholder="" class="oe_inline" readonly = "state not in ['draft']"/>
                                <field name="move_ids" placeholder="" class="oe_inline" widget="many2many_tags" options="{'no_create': True}" readonly = "state not in ['draft']"/>
                            </div>

                        </group>

                    </group>

                    <!-- #################################################################### -->
                    <group invisible="state != 'draft'">

                        <group>
                        </group>

                        <group>
                            <div class="image-container">
                                <img src="/l10n_pe_diary_ledger_multi_currency/static/libro_mayor.png" class="bottom-right-image" style="width: 30vw; max-width: 300px; height: auto;"/>
                            </div>
                        </group>

                    </group>


                    <notebook invisible="state == 'draft'">

                        <page name="libro_diario_mayor_multi_moneda" string="Libro Diario-Mayor Multi-Moneda">
                       
                            <field name="diary_ledger_multi_currency_line_ids" options="{'no_create': True}" widget="one2many_search">

                                <tree create="false" editable="bottom" options="{'no_open': True}" limit="1000">  
                    
                                    <field name="account_move_line_id"/>
                                    <field name="move_id"/>
                                    <field name="account_id"/>
                                    <field name="journal_id"/>
                                    <field name="partner_id"/>
                                    <field name="date"/>
                                    <field name="date_emission"/>
                                    <field name="date_maturity"/>
                                    <field name="document_type"/>
                                    <field name="l10n_pe_prefix_code"/>
                                    <field name="l10n_pe_invoice_number"/>
                                    <field name="comment"/>
                                    <field name="ref"/>
                                    <field name="account_analytic_account_names"/>
                                    <field name="debit_mn"/>
                                    <field name="credit_mn"/>
                                    <field name="second_currency_id"/>
                                    <field name="rate"/>
                                    <field name="debit_me"/>
                                    <field name="credit_me"/>

                                </tree>      
                            </field>
                        </page>

                        <!-- ################################################################## -->

                        <page name="Report-Parametros" string="Parámetros de Reporte">

                            <group name="grupo_base_diary_ledger_multi_currency">

                                <group string="Fecha - Periodo Fiscal">
                                    
                                    <field name="company_id" options="{'no_create': True, 'no_create_edit':True}" groups="base.group_multi_company" readonly="1"/>

                                    <field name="name" readonly="1"/>
                                    <field name="period" readonly="1"/>
                                    <label for="fiscal_year" invisible="period == False"/>

                                    <div invisible="period == False">
                                        <field name="fiscal_year" placeholder="Año" class="oe_inline" invisible="period == False" required="period == True" readonly="1"/>
                                        <field name="fiscal_month" placeholder="Mes" class="oe_inline" invisible="period == False" required="period == True" readonly="1"/>
                                    </div>

                                    <field name="date" readonly="1"/>
                                    <field name="date_from" invisible = "date == False" required="date ==  True" readonly="1"/>
                                    <field name="date_to" invisible = "date == False" required="date == True" readonly="1"/>

                                </group>

                                
                                <group name="Filtros_dinamicos" string='Filtros dinámicos'>

                                    <label for="account_ids"/>
                                    <div>
                                        <field name="account_option" placeholder="" class="oe_inline" readonly="1"/>
                                        <field name="account_ids" placeholder="" class="oe_inline" widget="many2many_tags" options="{'no_create': True}" readonly="1"/>
                                    </div>                           

                                    <label for="partner_ids"/>
                                    <div>
                                        <field name="partner_option" placeholder="" class="oe_inline" readonly="1"/>
                                        <field name="partner_ids" placeholder="" class="oe_inline" widget="many2many_tags" options="{'no_create': True}" readonly="1"/>
                                    </div>

                                    <label for="journal_ids"/>
                                    <div>
                                        <field name="journal_option" placeholder="" class="oe_inline" readonly="1"/>
                                        <field name="journal_ids" placeholder="" class="oe_inline" widget="many2many_tags" options="{'no_create': True}" readonly="1"/>
                                    </div>

                                    <label for="move_ids"/>
                                    <div>
                                        <field name="move_option" placeholder="" class="oe_inline" readonly="1"/>
                                        <field name="move_ids" placeholder="" class="oe_inline" widget="many2many_tags" options="{'no_create': True}" readonly="1"/>
                                    </div>

                                </group>

                            </group>
                        
                        </page>

                    </notebook>
                </form>
            </field>

        </record>



        <record id="diary_ledger_multi_currency_view_tree" model="ir.ui.view">
            <field name="name">Libro Diario-Mayor Multi-Moneda</field>
            <field name="model">diary.ledger.multi.currency</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="company_id"/>
                    <field name="name"/>
                    <field name="fiscal_month"/>
                    <field name="fiscal_year"/>
                    <field name="date_from"/>
                    <field name="date_to"/>

                    <field name="state"
                        widget="badge"
                        decoration-info="state == 'draft'"
                        decoration-success="state == 'generated'"/>

                </tree>
            </field>
        </record>


        <record id="action_diary_ledger_multi_currency" model="ir.actions.act_window">
            <field name="name">Libro Diario-Mayor Multi-Moneda</field>
            <field name="res_model">diary.ledger.multi.currency</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="diary_ledger_multi_currency_view_tree"/>
        </record>


        <menuitem 
            id="menu_diary_ledger_multi_currency" 
            name="Libro Diario-Mayor Multi-Moneda" 
            parent="account.menu_finance_reports"
            sequence="2"
            groups="account.group_account_invoice"
            action="action_diary_ledger_multi_currency"/>

    </data>
</odoo>