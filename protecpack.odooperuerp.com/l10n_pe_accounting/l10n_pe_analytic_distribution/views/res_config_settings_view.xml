<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_l10n_pe_analytic_distribution" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.l10n.pe.analytic.distribution</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="11"/>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">

            <xpath expr="//block[@name='default_taxes_setting_container']" position="after">

                <block title="Asientos de Destino para Cuentas de Gasto" name="l10n_pe_analytic_distribution_setting_container">
                
                    <setting id="l10n_pe_analytic_distribution" string="Generación de Asientos de Destino" company_dependent="1">

                        <label for="distribution_journal_id"/>
                        <div class="text-muted">
                            Establezca el Diario para la Generación de Asientos de Destino.
                        </div>
                        <field name="distribution_journal_id" string=""/>

                        <br/>

                    </setting>

                </block>

            </xpath>

        </field>
    </record>

</odoo>