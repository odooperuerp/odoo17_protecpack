<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

        <record id="template_dua_informacion_anotable_view_form" model="ir.ui.view">
            <field name="name">Registro DUA - Plantilla de información Anotable</field>
            <field name="model">template.dua.informacion.anotable</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>

                        <group>
                            <group>
                                <field name="company_id" readonly="1"/>
                            </group>
                        </group>

                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                        </group>

                        <notebook>
                            <page name="conceptos_anotables" string="Conceptos Anotables">
                                <field name="conceptos_anotable_ids">

                                    <tree limit="100" editable="bottom">

                                        <field name="product_id" options="{'no_create': True, 'no_create_edit':True}"/>
                                        <field name="account_id" options="{'no_create': True, 'no_create_edit':True}"/>
                                        <field name="tax_id" options="{'no_create': True, 'no_create_edit':True}"/>
                                        <field name="type_calculo"/>
                                        <field name="amount_porcentaje_monto"/>
                                        <field name="type_concepto"/>

                                    </tree>

                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    </form>
                </field>
        </record>

        <record id="template_dua_informacion_anotable_view_tree" model="ir.ui.view">
            <field name="name">Registro DUA - Plantilla de información Anotable</field>
            <field name="model">template.dua.informacion.anotable</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="conceptos_anotable_ids"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>


        <record id="action_template_dua_informacion_anotable" model="ir.actions.act_window">
            <field name="name">Registro DUA - Plantilla de información Anotable</field>
   		    <field name="res_model">template.dua.informacion.anotable</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="template_dua_informacion_anotable_view_tree"/>
        </record>


        <menuitem name="Registro DUA-Plantillas de información" id="root_registro_plantillas_dua" parent="account.menu_finance_configuration"/>

        <menuitem id="menu_template_dua_informacion_anotable" name="Plantillas de información Anotable" parent="l10n_pe_account_register_dua.root_registro_plantillas_dua" sequence="0" groups="account.group_account_invoice" action="action_template_dua_informacion_anotable"/>
             
	</data>
</odoo>