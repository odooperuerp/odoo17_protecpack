<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

        <record id="editor_journals_account_move_view_form" model="ir.ui.view">
            <field name="name">Editor de Diarios en Asientos Contables</field>
            <field name="model">editor.journals.account.move</field>
            <field name="arch" type="xml">
                <form>

                    <div class="alert alert-info" role="alert" style="margin-bottom:0px">
                        <bold>Esta herramienta le ayudar치 a editar los diarios asignados a un conjunto de asientos contables. Es recomendable que tenga bien identificado los movimientos a editar antes de usar esa herramienta.</bold>
                    </div>

                    <header>
                        
                        <button name="update_account_move_massive"
                            string="Ejecutar Actualizaci칩n"
                            confirm="Una vez confirmado este proceso no hay marcha atras !"
                            invisible="state != 'draft'"
                            type="object"
                            icon="fa-play"
                            class="oe_highlight"
                            />

                        <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                    </header>
               
                    <sheet>

                        <header>
                        
                            <button name="add_lines" 
                                string="Agregar a Tabla"
                                class="oe_highlight"
                                type="object"
                                invisible="state != 'draft'"
                                icon="fa-plus"
                            />

                            <button name="limpiar_buffer" 
                                string="Limpiar Selecci칩n"
                                type="object"
                                invisible="state != 'draft'"
                            />

                        </header>

                        <group>

                            <group>
                                <field name="buffer_account_move_ids" widget="many2many_tags" options="{'no_create': True}" readonly="state == 'done'"/>
                            </group>

                        </group>

                        <group string="Operaciones Masivas">

                            <group>
                                <field name="massive_journal_id" options="{'no_create': True}" readonly="state == 'done'"/>
                            </group>

                            <div>
                                <button name="aplication_massive"
                                    string="Aplicar"
                                    class="oe_highlight"
                                    type="object"
                                    icon="fa-plus"
                                    invisible="state != 'draft'"
                                />
                            </div>

                        </group>


                        <notebook>
                            <page name="editor_journals_account_move_page" string="ASIENTOS CONTABLES A EDITAR">
                            
                                <field name='editor_journals_account_move_line_ids' readonly="state == 'done'">
                                        
                                    <tree editable="1"> 

                                        <field name="move_id"/>
                                        <field name="ref"/>
                                        <field name="date"/>
                                        <field name="original_journal_id"/>
                                        <field name="new_journal_id"/>

                                    </tree> 

                                </field>
                            </page>

                        </notebook>

                    </sheet>
                </form>             
            </field>
        </record>


        <record id="action_editor_journals_account_move" model="ir.actions.act_window">
            <field name="name">Editor de Diarios en Asientos Contables</field>
   		    <field name="res_model">editor.journals.account.move</field>
            <field name="view_mode">tree,form</field>
            <field eval="False" name="view_id"/>
            <field name="view_id" ref="editor_journals_account_move_view_form"/>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Editor de Diarios en Asientos Contables
              </p><p>
                Permite Editor los Diarios en Asientos Contables de su elecci칩n.
              </p>
            </field>
        </record>

        <record id="action_editor_journals_account_move_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="editor_journals_account_move_view_form"/>
            <field name="act_window_id" ref="action_editor_journals_account_move"/>
        </record>

        <!--<menuitem name="Invoicing"
        id="menu_finance"
        groups="account.group_account_readonly,account.group_account_invoice"
        web_icon="account,static/description/icon.png"
        sequence="55">-->

        <menuitem id="menu_editor_journals_account_move" name="Editor de Diarios en Asientos Contables" groups="account.group_account_invoice" parent="editor_account_in_aml.menu_tools_account_codlan" action="action_editor_journals_account_move" sequence="2"/>

             
	</data>
</odoo>
