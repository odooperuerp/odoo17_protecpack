<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_move_form_duplicate_purchase" model="ir.ui.view">
            <field name="name">account.move.form.duplicate.purchase</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <xpath expr="//form/header" position="before">

                    <field name="exist_in_invoice_document_duplicate" invisible="1"/>

                    <div class="alert alert-info" role="alert" style="margin-bottom:0px" invisible="exist_in_invoice_document_duplicate not in [True]">

                        <bold>Ya existe otro Documento con el mismo n√∫mero de Serie y Correlativo para este Auxiliar !</bold>

                        <button name="open_exist_document_in_invoice" invisible="exist_in_invoice_document_duplicate not in [True]" string="Ver Documentos" type="object" class="oe_link oe_inline"/>

                    </div>

                </xpath>
               
            </field>
        </record>

    </data>
</odoo>