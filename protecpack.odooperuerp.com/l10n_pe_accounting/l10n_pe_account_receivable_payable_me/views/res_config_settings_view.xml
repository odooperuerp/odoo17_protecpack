<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_inherit_retentions" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.retentions</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="11"/>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">

            <!-- #################################################################### -->
            <xpath expr="//block[@name='main_currency_setting_container']" position="after">

                <block title="Cuentas Contables de Socios en Moneda Extranjera" name="main_currency_me_partner_setting_container" groups="base.group_multi_currency">
                
                    <setting id="account_receivable_payable_me" string="Establece las cuentas por cobrar y pagar en ME para los socios." company_dependent="1">

                        <label for="property_account_receivable_me_id"/>
                        <div class="text-muted">
                            Establecer Cuenta por Cobrar en Moneda Extranjera.
                        </div>
                        <field name="property_account_receivable_me_id"/>


                        <br/>
                            
                        <label for="property_account_payable_me_id" groups="base.group_multi_currency"/>
                        <div class="text-muted" groups="base.group_multi_currency">
                            Establecer Cuenta por Pagar en Moneda Extranjera.
                        </div>
                        <field name="property_account_payable_me_id" groups="base.group_multi_currency"/>


                        <div>
                            <button name="sync_account_me_partners" 
                                string="Sincronizar Cuentas ME"
                                type="object"
                                icon="fa-refresh"
                            />
                        </div>

                    </setting>

                </block>


                <block title="Contabilidad de Recibos por Honorarios" name="main_receipt_fees_setting_container">
                
                    <setting id="receipt_fees" string="Cuentas por Pagar de Recibos por Honorarios en Moneda Nacional y Extranjera" company_dependent="1">

                        <laber for="property_account_payable_fees_id"/>
                        <div class="text-muted">
                            Establecer Cuenta de Recibo por Honorarios por Pagar en MN.
                        </div>
                        <field name="property_account_payable_fees_id"/>

                        <br/>

                        <label for="property_account_payable_me_fees_id" groups="base.group_multi_currency"/>
                        <div class="text-muted" groups="base.group_multi_currency">
                            Establecer Cuenta de Recibo por Honorarios por Pagar en ME.
                        </div>
                        <field name="property_account_payable_me_fees_id" groups="base.group_multi_currency"/>


                        <div>

                            <button name="sync_account_fees_partners" 
                                string="Sincronizar Cuentas RH"
                                type="object"
                                icon="fa-refresh"
                            />
                            
                        </div>

                    </setting>

                </block>

                
            </xpath>

        </field>
    </record>

</odoo>
