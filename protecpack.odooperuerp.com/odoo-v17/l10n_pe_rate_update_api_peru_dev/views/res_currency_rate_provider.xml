<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="res_currency_rate_provider_form_view" model="ir.ui.view">
        <field name="name">res.currency.rate.provider.view.form.inherit.invoice_currency_rate_update</field>
        <field name="model">res.currency.rate.provider</field>
        <field name="inherit_id" ref="invoice_currency_rate_update.res_currency_rate_provider_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='service']" position="after">
                <field name="api_peru_dev_token" invisible="service != 'api_peru_dev'" required="service == 'api_peru_dev'" password="True"/>
            </xpath>
        </field>
    </record>

</odoo>
