<odoo>
  <data>
  
  
     <record model="ir.ui.view" id="gestionit_guia_remision_line">
      <field name="name">gestionit.add.fields.guia.remision.line</field>
      <field name="model">gestionit.guia_remision</field>
      <field name="arch" type="xml">
        <field name="comprobante_pago_ids" position="after">
         <field name="partner_id" />
        </field>
      </field>
    </record>
    
  
    <record id="guiaremision_search_custom" model="ir.ui.view"> 
      <field name="name">guiaremision.search.custom</field> 
      <field name="model">gestionit.guia_remision</field> 
      <field name="arch" type="xml"> 
       <search>
        <field name="partner_id" />
        <field name="name" />
        <field name="comprobante_pago_ids" />
       </search> 
      </field> 
    </record>

  
  </data>
</odoo>
