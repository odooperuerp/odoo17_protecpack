<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data  noupdate="0">


        <!-- ####################################### -->
    	<record id="sire_base_rule" model="ir.rule">
            <field name="name">Follow-up rule for SIRE purchase</field>
            <field name="model_id" ref="model_sire_base"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id','=',user.company_id.id)]</field>
    	</record>
        <!-- ####################################### -->


	    <record model="ir.module.category" id="module_category_sire_base">
            <field name="name">SIRE-SUNAT</field>
            <field name="description">Reportes SIRE-SUNAT</field>
            <field name="sequence">7</field>
        </record>


        <record id="group_sire_base_manager" model="res.groups">
            <field name="name">Registro SIRE Compras-Ventas</field>
            <field name="comment">Registro SIRE SUNAT Compras-Ventas</field>
            <field name="category_id" ref="module_category_sire_base"/>
        </record>


        <record id="base.group_system" model="res.groups">
            <field name="implied_ids" eval="[(4, ref('sire_base.group_sire_base_manager'))]"/>
        </record>


        <record id="sire_base_see_all" model="ir.rule">
            <field name="name">Registro Compras-Ventas</field>
            <field ref="model_sire_base" name="model_id"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('sire_base.group_sire_base_manager'))]"/>
        </record>

</data>
</odoo>

