<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

        <record id="report_amount_balances_optimized_native_view_form" model="ir.ui.view">
            <field name="name">Balance de Comprobación F12</field>
            <field name="model">report.amount.balances.optimized.native</field>
            <field name="arch" type="xml">
                <form>

                    <header>

                        <button name="run_balance_of_sums_and_balances"
                                string="GENERAR BALANCE"
                                class="oe_highlight"
                                type="object"
                                icon="fa-book"
                        />

                        <button name="action_draft"
                            string="Borrador"
                            invisible="state not in ['generated']"
                            type="object"
                            icon="fa-arrow-left"
                        />

                         <button name="action_print" 
                            string="Imprimir"
                            type="object"
                            class="oe_highlight"
                            invisible="state not in ['generated']"
                            icon="fa-print"
                        />

                        
                        <button name="limpiar_campos" class="oe_highlight" string="Limpiar" type="object" invisible="state not in ['draft','generated']"/>

                        <field name="state" widget="statusbar" statusbar_visible="draft,generated" />

                    </header>

                    <group invisible="state != 'draft'">
                        <group>
                            <field name="company_id"  options="{'no_create': True}" groups="base.group_multi_company"/>
                        </group>
                    </group>
                        
                    <group invisible="state != 'draft'">

                        <group string="Parámetros de Fecha">
                                <field name="fecha_inicio"/>
                                <field name="fecha_final"/>

                                <field name="with_init_period" widget="boolean_toggle"/>

                                <field name="number_digits" invisible="with_init_period == True"/>
                                <field name="currency_id" options="{'no_create': True}" readonly="True"/>
                        </group>
                            
                        
                        <group name="Filtros_dinamicos" string='Filtros dinámicos'>

                            <label for="account_ids"/>
                            <div>
                                <field name="account_option" placeholder="" class="oe_inline"/>
                                <field name="account_ids" placeholder="" class="oe_inline" widget="many2many_tags" options="{'no_create': True}"/>
                            </div>                           

                            <label for="partner_ids"/>
                            <div>
                                <field name="partner_option" placeholder="" class="oe_inline"/>
                                <field name="partner_ids" placeholder="" class="oe_inline" widget="many2many_tags" options="{'no_create': True}"/>
                            </div>


                            <label for="journal_ids"/>
                            <div>
                                <field name="journal_option" placeholder="" class="oe_inline"/>
                                <field name="journal_ids" placeholder="" class="oe_inline" widget="many2many_tags" options="{'no_create': True}"/>
                            </div>

                            <label for="move_ids"/>
                            <div>
                                <field name="move_option" placeholder="" class="oe_inline"/>
                                <field name="move_ids" placeholder="" class="oe_inline" widget="many2many_tags" options="{'no_create': True}" domain="[('state', '=', 'posted')]"/>
                            </div>

                        </group>


                    </group>

                    <group invisible="state != 'draft'">

                        <group>
                        </group>

                        <group>
                            <div class="image-container">
                                <img src="/account_report_amount_balances_native/static/balance_de_comprobacion.jpg" class="bottom-right-image" style="width: 30vw; max-width: 300px; height: auto;"/>
                            </div>
                        </group>

                    </group>



                    <notebook invisible="state == 'draft'">

                        <page name="Balance_sumas_saldos" string="Detalles de Balance de Comprobación">

                            <field name="report_amount_balances_optimized_line_ids" options="{'no_create': True}" widget="one2many_search">

                                <tree create="false" editable="bottom" options="{'no_open': True}" limit="3000">  
                                        
                                    <!--<field name="account_id"/>-->
                                    <field name="name_account"/>
                                    <field name="saldos_iniciales_deudor" sum="saldos_iniciales_deudor"/>
                                    <field name="saldos_iniciales_acreedor" sum="saldos_iniciales_acreedor"/>
                                    <field name="anio_fiscal_debe" sum="anio_fiscal_debe"/>
                                    <field name="anio_fiscal_haber" sum="anio_fiscal_haber"/>
                                    <field name="saldos_finales_deudor" sum="saldos_finales_deudor"/>
                                    <field name="saldos_finales_acreedor" sum="saldos_finales_acreedor"/>
                                    <field name="balance_general_activo" sum="balance_general_activo"/>
                                    <field name="balance_general_pas_y_patr" sum="balance_general_pas_y_patr"/>
                                    <field name="resultados_naturaleza_perdidas" sum="resultados_naturaleza_perdidas"/>
                                    <field name="resultados_naturaleza_ganancias" sum="resultados_naturaleza_ganancias"/>
                                    <field name="resultados_funcion_perdidas" sum="resultados_funcion_perdidas"/>
                                    <field name="resultados_funcion_ganancias" sum="resultados_funcion_ganancias"/>

                                        
                                    <button name="button_view_saldos_iniciales" string="Saldos Iniciales" type="object" class="oe_highlight" readonly="0"/>

                                    <button name="button_view_movimientos_periodo" string="Mov. Periodo" type="object" class="oe_highlight" readonly="0"/>

                                </tree>


                            </field>

                        </page>

                        <!-- ################################################## -->

                        <page name="Report_Parametros" string="Parámetros de Reporte">

                            <group>
                                <group>
                                    <field name="name" readonly="1"/>
                                </group>

                                <group>
                                    <field name="company_id"  options="{'no_create': True}" groups="base.group_multi_company" readonly="1"/>
                                </group>
                            </group>
                                
                            <group>

                                <group string="Parámetros de Fecha">

                                    <field name="fecha_inicio" readonly="1"/>
                                    <field name="fecha_final" readonly="1"/>

                                    <field name="with_init_period" widget="boolean_toggle" readonly="1"/>

                                    <field name="number_digits" readonly="1"/>
                                    <field name="currency_id" options="{'no_create': True}" readonly="True"/>
                                </group>
                                    
                                
                                <group name="Filtros_dinamicos" string='Filtros dinámicos'>

                                    <label for="account_ids"/>
                                    <div>
                                        <field name="account_option" placeholder="" class="oe_inline" readonly="1"/>
                                        <field name="account_ids" placeholder="" class="oe_inline" widget="many2many_tags" options="{'no_create': True}" readonly="1"/>
                                    </div>                           

                                    <label for="partner_ids"/>
                                    <div>
                                        <field name="partner_option" placeholder="" class="oe_inline" readonly="1"/>
                                        <field name="partner_ids" placeholder="" class="oe_inline" widget="many2many_tags" options="{'no_create': True}" readonly="1"/>
                                    </div>


                                    <label for="journal_ids"/>
                                    <div>
                                        <field name="journal_option" placeholder="" class="oe_inline" readonly="1"/>
                                        <field name="journal_ids" placeholder="" class="oe_inline" widget="many2many_tags" options="{'no_create': True}" readonly="1"/>
                                    </div>

                                    <label for="move_ids"/>
                                    <div>
                                        <field name="move_option" placeholder="" class="oe_inline" readonly="1"/>
                                        <field name="move_ids" placeholder="" class="oe_inline" widget="many2many_tags" options="{'no_create': True}" readonly="1" domain="[('state', '=', 'posted')]"/>
                                    </div>

                                </group>

                            </group>
                        
                        </page>

                    </notebook>

                    
                    <group>
                        <field name="name"/>
                    </group>

                    </form>

                </field>

        </record>


        <record id="report_amount_balances_optimized_native_view_tree" model="ir.ui.view">
            <field name="name">Balance de Comprobación F12</field>
            <field name="model">report.amount.balances.optimized.native</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="company_id"/>
                    <field name="name"/>
                    <field name="fecha_inicio"/>
                    <field name="fecha_final"/>
                    <field name="number_digits"/>
                    <field name="currency_id"/>
                    
                    <field name="state"
                        widget="badge"
                        decoration-info="state == 'draft'"
                        decoration-success="state == 'generated'"/>
                </tree>
            </field>
        </record>


        <record id="action_report_amount_balances_optimized_native" model="ir.actions.act_window">
            <field name="name">Balance de Comprobación F12</field>
   		    <field name="res_model">report.amount.balances.optimized.native</field>
            <field name="domain">[('company_id','=',allowed_company_ids[0])]</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="report_amount_balances_optimized_native_view_tree"/>
        </record>


         <menuitem 
            id="menu_report_amount_balances_optimized_native_root" 
            name="INFORMES DE BALANCE NATIVOS" 
            parent="account.menu_finance_reports"
            sequence="0" groups="account.group_account_invoice"/>

        <menuitem id="menu_report_amount_balances_optimized_native" name="Balance de Comprobación F12" parent="menu_report_amount_balances_optimized_native_root"  groups="account.group_account_invoice" action="action_report_amount_balances_optimized_native"/>
             
	</data>
</odoo>
