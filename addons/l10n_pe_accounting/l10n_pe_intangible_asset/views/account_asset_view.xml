<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="view_account_asset_form_inherit_intangible" model="ir.ui.view">
            <field name="name">account.asset.form.inherit.intangible</field>
            <field name="model">account.asset</field>
            <field name="inherit_id" ref="account_asset.view_account_asset_form"/>
            <field name="arch" type="xml">
                    
                <xpath expr="//form/header" position="before">
                    <field name="is_intangible" invisible="1"/>

                    <div class="alert alert-info" role="alert" style="margin-bottom:0px" invisible="is_intangible != True or state == 'model'">
                        <bold>Este Activo es Intangible</bold> 
                    </div>

                </xpath>


                <xpath expr="//form/sheet/div[@class='oe_title']" position="after">
                    
                    <group>
                        <field name="is_intangible" invisible="state == 'model'"/>
                    </group>

                </xpath>

                <xpath expr="//form/sheet/div[@class='oe_title']" position="after">
                    
                    <group>
                        <field name="is_category_intangible" invisible="state != 'model'"/>
                    </group>

                </xpath>
                           
            </field>
        </record>


        <!-- ################################################ -->


        <record id="view_account_asset_search_inherit_intangible" model="ir.ui.view">
        <field name="name">account.asset.search.inherit.intangible</field>
        <field name="model">account.asset</field>
        <field name="inherit_id" ref="account_asset.view_account_asset_search"/>
        <field name="arch" type="xml">

            <filter name="closed" position="after">

                <filter string="Activo Fijo" name="fixed_asset" domain="[('is_intangible','!=',True)]" help="Es Activo Fijo"/>
                <filter string="Activo Intangible" name="intangible_asset" domain="[('is_intangible','=',True)]" help="Es Activo Intangible"/>

            </filter>

        </field>

    </record>



    </data>
</odoo>
