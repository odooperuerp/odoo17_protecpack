<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
      
		<record id="diary_ledger_multi_currency_line_view_form" model="ir.ui.view">
			<field name="name">Libro Diario-Mayor Multi-Moneda</field>
            <field name="model">diary.ledger.multi.currency.line</field>
            <field name="arch" type="xml">
            	<form>
                    <sheet>
                        <group>
            		       <group>

                                <field name="account_move_line_id"/>
                                <field name="move_id"/>
                                <field name="account_id"/>
                                <field name="journal_id"/>
                                <field name="partner_id"/>
                                <field name="date"/>
                                <field name="date_emission"/>
                                <field name="date_maturity"/>
                                <field name="document_type"/>
                                <field name="l10n_pe_prefix_code"/>
                                <field name="l10n_pe_invoice_number"/>
                                <field name="comment"/>
                                <field name="ref"/>
                                <field name="account_analytic_account_names"/>
                                <field name="debit_mn"/>
                                <field name="credit_mn"/>
                                <field name="second_currency_id"/>
                                <field name="rate"/>
                                <field name="debit_me"/>
                                <field name="credit_me"/>
                        
                    		</group>
                        </group>
                     
                </sheet>
                </form>            	
            </field>
		</record>


        <!--###############################################-->

            <record id="view_diary_ledger_multi_currency_line_tree" model="ir.ui.view">
            <field name="name">Libro Diario-Mayor Multi-Moneda</field>
            <field name="model">diary.ledger.multi.currency.line</field>
            <field eval="1" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Libro Diario-Mayor Multi-Moneda" create="false">
                   
                    <field name="account_move_line_id"/>
                    <field name="move_id"/>
                    <field name="account_id"/>
                    <field name="journal_id"/>
                    <field name="partner_id"/>
                    <field name="date"/>
                    <field name="date_emission"/>
                    <field name="date_maturity"/>
                    <field name="document_type"/>
                    <field name="l10n_pe_prefix_code"/>
                    <field name="l10n_pe_invoice_number"/>
                    <field name="comment"/>
                    <field name="ref"/>
                    <field name="account_analytic_account_names"/>
                    <field name="debit_mn"/>
                    <field name="credit_mn"/>
                    <field name="second_currency_id"/>
                    <field name="rate"/>
                    <field name="debit_me"/>
                    <field name="credit_me"/>

                </tree>
            </field>
        </record>


        <record id="action_diary_ledger_multi_currency_line" model="ir.actions.act_window">
            <field name="name">Libro Diario-Mayor Multi-Moneda</field>
            <field name="res_model">diary.ledger.multi.currency.line</field>
            <field name="view_mode">tree,form</field>
        </record>


        <record id="view_diary_ledger_multi_currency_line_filter" model="ir.ui.view">
            <field name="name">diary.ledger.multi.currency.line.filter</field>
            <field name="model">diary.ledger.multi.currency.line</field>
            <field name="arch" type="xml">
                <search string="Libro Diario-Mayor Multi-Moneda">

                    <field name="account_id"/>
                    <field name="move_id"/>
                    <field name="journal_id"/>
                    <field name="partner_id"/>
                    <field name="date"/>
                    <field name="l10n_pe_prefix_code"/>
                    <field name="l10n_pe_invoice_number"/>
                    <field name="comment"/>
                    <field name="ref"/>
                    <field name="account_analytic_account_names"/>
                    <field name="debit_mn"/>
                    <field name="credit_mn"/>
                    <field name="rate"/>
                    <field name="debit_me"/>
                    <field name="credit_me"/>
                    
                    <separator/>

                    <!--#################################################-->
                    <group expand="1" string="Group By">
                        <filter string="Cuenta" name="filter_account" context="{'group_by':'account_id'}"/>
                        <filter string="Asiento Contable" name="filter_account_move" context="{'group_by':'move_id'}"/>
                        <filter string="Diario" name="filter_journal" context="{'group_by':'journal_id'}"/>
                        <filter string="Auxiliar" name="filter_partner" context="{'group_by':'partner_id'}"/>
                        <filter string="Fecha Registro" name="filter_date" context="{'group_by':'date'}"/>
                        <filter string="Tipo Documento" name="filter_document_type" context="{'group_by':'document_type'}"/>
                        <filter string="NÂ° Serie" name="filter_l10n_pe_prefix_code" context="{'group_by':'l10n_pe_prefix_code'}"/>
                    </group>
                </search>

            </field>
        </record>

        <record id="action_diary_ledger_multi_currency_line_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_diary_ledger_multi_currency_line_tree"/>
            <field name="act_window_id" ref="action_diary_ledger_multi_currency_line"/>
        </record>
        
		
	</data>
</odoo>
