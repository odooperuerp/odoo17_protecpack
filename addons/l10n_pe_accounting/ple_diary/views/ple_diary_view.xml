<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="ple_diary_view_form" model="ir.ui.view">
            <field name="name">ple.diary.form</field>
            <field name="model">ple.diary</field>
            <field name="inherit_id" ref="ple_base.ple_base_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//form/header" position="inside">

                    <button name="button_view_tree" 
                        string="Vista Dinámica" 
                        invisible="state not in ['open']" 
                        type="object" 
                        icon="fa-bars"
                    />

                </xpath>


                <group name="grupo_base" position="replace">

                    <group name="grupo_base" string="Fecha - Periodo Fiscal" invisible="state != 'draft'">
                            
                        <field name="company_id" options="{'no_create': True, 'no_create_edit':True}" groups="base.group_multi_company"/>

                        <field name="fecha"/>
                        <field name="date_from" invisible="fecha == False" required="fecha == True"/>
                        <field name="date_to" invisible="fecha == False" required="fecha == True"/>

                        <field name="periodo"/>

                        <label for="fiscal_year" invisible="periodo == False"/>
                    
                        <div invisible="periodo == False">
                    
                            <field name="fiscal_year" placeholder="Año" class="oe_inline" invisible="periodo == False" required="periodo == True"/>
                            <field name="fiscal_month" placeholder="Mes" class="oe_inline" invisible="periodo == False" required="periodo == True"/>

                        </div>

                    </group>


                    <group  name="grupo_filtros_dinamicos" string="Filtros Dinámicos" invisible="state != 'draft'">

                        <label for ="partner_ids"/>
                        <div>
                            <field name="options_partner" placeholder="" class="oe_inline"/>
                            <field name="partner_ids" class="oe_inline" placeholder="" widget="many2many_tags" options="{'no_create': True}"/>
                        </div>

                        <label for ="account_ids"/>
                        <div>
                            <field name="options_account" placeholder="" class="oe_inline"/>
                            <field name="account_ids" placeholder="" class="oe_inline" widget="many2many_tags" options="{'no_create': True}"/>
                        </div>

                        <label for ="journal_ids"/>
                        <div>
                            <field name="options_journal" placeholder="" class="oe_inline"/>
                            <field name="journal_ids" placeholder="" class="oe_inline" widget="many2many_tags" options="{'no_create': True}"/>
                        </div>

                        <label for ="move_ids"/>
                        <div>
                            <field name="options_move" placeholder="" class="oe_inline"/>
                            <field name="move_ids" placeholder="" class="oe_inline" widget="many2many_tags" options="{'no_create': True}"/>
                        </div>

                    </group>

                    <group invisible="state != 'draft'">
                        <field name="incluir_anteriores_no_declarados"/>
                    </group>

                </group>


                <!-- ############################## -->

                <xpath expr="//form" position="inside">
                    <notebook invisible="state == 'draft'">

                        <page name="PLE_Libro_diario" string="PLE Libro Diario">
                        
                            <field name='ple_diary_line_ids' widget="one2many_search">

                                <tree create="0"> 

                                    <field name ="move_id" />
                                    <field name ="move_line_id" />
                                    <field name ="asiento_contable" />
                                    <field name ="m_correlativo_asiento_contable" />
                                    <field name ="codigo_cuenta_desagregado_id" />
                                    <field name ="codigo_cuenta_desagregado" />
                                    <field name ="codigo_unidad_operacion" />
                                    <field name ="codigo_centro_costos" />
                                    <field name ="tipo_moneda_origen" />
                                    <field name ="tipo_doc_iden_emisor" />
                                    <field name ="num_doc_iden_emisor" />
                                    <field name ="tipo_comprobante_pago" />
                                    <field name ="num_serie_comprobante_pago" />
                                    <field name ="num_comprobante_pago" />
                                    <field name ="fecha_contable" />
                                    <field name ="fecha_vencimiento" />
                                    <field name ="fecha_operacion" />
                                    <field name ="glosa" />
                                    <field name ="glosa_referencial" />
                                    <field name ="movimientos_debe"  sum="movimientos_debe"/>
                                    <field name ="movimientos_haber"  sum="movimientos_haber"/>
                                    <field name ="dato_estructurado" />
                                    <field name ="indicador_estado_operacion" />
                               
                                </tree>      


                            </field>
                        
                        </page>

                        <page name="PLE_Libro_diario_simplificado" string="PLE Libro Diario Simplificado">
                        
                            <field name='ple_diary_line_ids' widget="one2many_search">

                                <tree create="0"> 

                                    <field name ="move_id" />
                                    <field name ="move_line_id" />
                                    <field name ="asiento_contable" />
                                    <field name ="m_correlativo_asiento_contable" />
                                    <field name ="codigo_cuenta_desagregado_id" />
                                    <field name ="codigo_cuenta_desagregado" />
                                    <field name ="codigo_unidad_operacion" />
                                    <field name ="codigo_centro_costos" />
                                    <field name ="tipo_moneda_origen" />
                                    <field name ="tipo_doc_iden_emisor" />
                                    <field name ="num_doc_iden_emisor" />
                                    <field name ="tipo_comprobante_pago" />
                                    <field name ="num_serie_comprobante_pago" />
                                    <field name ="num_comprobante_pago" />
                                    <field name ="fecha_contable" />
                                    <field name ="fecha_vencimiento" />
                                    <field name ="fecha_operacion" />
                                    <field name ="glosa" />
                                    <field name ="glosa_referencial" />
                                    <field name ="movimientos_debe"  sum="movimientos_debe"/>
                                    <field name ="movimientos_haber"  sum="movimientos_haber"/>
                                    <field name ="dato_estructurado" />
                                    <field name ="indicador_estado_operacion" />
                               
                                </tree>      


                            </field>
                        
                        </page>

                        <page name="PLE_Libro_mayor" string="PLE Libro Mayor">
                        
                            <field name='ple_diary_line_ids' widget="one2many_search">
                                 
                                <tree create="0"> 

                                    <field name ="move_id" />
                                    <field name ="move_line_id" />
                                    <field name ="asiento_contable" />
                                    <field name ="m_correlativo_asiento_contable" />
                                    <field name ="codigo_cuenta_desagregado_id" />
                                    <field name ="codigo_cuenta_desagregado" />
                                    <field name ="codigo_unidad_operacion" />
                                    <field name ="codigo_centro_costos" />
                                    <field name ="tipo_moneda_origen" />
                                    <field name ="tipo_doc_iden_emisor" />
                                    <field name ="num_doc_iden_emisor" />
                                    <field name ="tipo_comprobante_pago" />
                                    <field name ="num_serie_comprobante_pago" />
                                    <field name ="num_comprobante_pago" />
                                    <field name ="fecha_contable" />
                                    <field name ="fecha_vencimiento" />
                                    <field name ="fecha_operacion" />
                                    <field name ="glosa" />
                                    <field name ="glosa_referencial" />
                                    <field name ="movimientos_debe"  sum="movimientos_debe"/>
                                    <field name ="movimientos_haber"  sum="movimientos_haber"/>
                                    <field name ="dato_estructurado" />
                                    <field name ="indicador_estado_operacion" />
                               
                                </tree>      


                            </field>
                        
                        </page>


                        <!-- ##################### PAGE DE PARÁMETROS #################### -->
                        <page name="PLE-Parametros" string="Parámetros PLE-Libro Diario-Mayor">

                            <group>
                                    
                                <group name="grupo_base" string="Fecha - Periodo Fiscal">

                                    <field name="fecha" readonly="True"/>
                                    <field name="date_from" invisible= "fecha != True" readonly="True"/>
                                    <field name="date_to" invisible= "fecha != True" readonly="True"/>

                                    <field name="periodo" readonly="True"/>

                                    <label for="fiscal_year" invisible = "periodo != True"/>
                                            
                                    <div invisible = "periodo != True">
                                        <field name="fiscal_year" placeholder="Año" class="oe_inline" readonly="True"/>
                                        <field name="fiscal_month" placeholder="Mes" class="oe_inline" readonly="True"/>
                                    </div>

                                </group>


                                <group  name="grupo_filtros_dinamicos" string="Filtros Dinámicos">
                                            
                                    <label for ="partner_ids"/>
                                    <div>
                                        <field name="options_partner" readonly="True" placeholder="" class="oe_inline"/>
                                        <field name="partner_ids" readonly="True" class="oe_inline" placeholder="" widget="many2many_tags" options="{'no_create': True}"/>
                                    </div>

                                    <label for ="account_ids"/>
                                    <div>
                                        <field name="options_account" readonly="True" placeholder="" class="oe_inline"/>
                                        <field name="account_ids" readonly="True" placeholder="" class="oe_inline" widget="many2many_tags" options="{'no_create': True}"/>
                                    </div>

                                    <label for ="journal_ids"/>
                                    <div>
                                        <field name="options_journal" readonly="True" placeholder="" class="oe_inline"/>
                                        <field name="journal_ids" readonly="True" placeholder="" class="oe_inline" widget="many2many_tags" options="{'no_create': True}"/>
                                    </div>

                                    <label for ="move_ids"/>
                                    <div>
                                        <field name="options_move" readonly="True" placeholder="" class="oe_inline"/>
                                        <field name="move_ids" readonly="True" placeholder="" class="oe_inline" widget="many2many_tags" options="{'no_create': True}"/>
                                    </div>

                                </group>

                                <group>
                                    <field name="incluir_anteriores_no_declarados" readonly="True"/>
                                </group>

                            </group>

                        </page>

                    </notebook>

                </xpath>                            
            </field>
        </record>


        <record id="ple_diary_view_tree" model="ir.ui.view">
            <field name="name">ple.diary.tree</field>
            <field name="model">ple.diary</field>
            <field name="arch" type="xml">

                <tree>
                    <field name="fiscal_year"/>
                    <field name="fiscal_month"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="company_id"/>

                    <field name="state"
                        widget="badge"
                        decoration-info="state == 'draft'"
                        decoration-success="state == 'open'"
                        decoration-muted="state == 'send'"/>

                </tree>

            </field>
        </record>


        <record id="action_ple_diary" model="ir.actions.act_window">
            <field name="name">PLE-Libro diario</field>
            <field name="res_model">ple.diary</field>
            <field name="view_mode">tree,form</field>
            <field eval="False" name="view_id"/>
            <field name="domain">[('company_id','=',allowed_company_ids[0])]</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Crear libro diario
              </p><p>
                El libro diario es un documento tributario
                y su representacion es en los siguientes formatos: txt y excel.
              </p>
            </field>
        </record>


        <record id="action_pe_diary_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="ple_diary_view_tree"/>
            <field name="act_window_id" ref="action_ple_diary"/>
        </record>


        <record id="action_pe_diary_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="ple_diary_view_form"/>
            <field name="act_window_id" ref="action_ple_diary"/>
        </record>

        <menuitem id="menu_ple_diary" parent="ple_base.menu_diario" sequence="0" action="action_ple_diary"/>

    </data>
</odoo>