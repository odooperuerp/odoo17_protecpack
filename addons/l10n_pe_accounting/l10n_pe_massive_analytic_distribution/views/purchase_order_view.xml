<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="purchase_order_analytic_form" model="ir.ui.view">
            <field name="name">purchase_order_analytic_form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                
                <field name="currency_id" position="after">


                    <label for="massive_analytic_distribution"/>
                    <div name="massive_analytic_distribution_div" class="d-flex">

                        <field name="massive_analytic_distribution" widget="analytic_distribution"
                            groups="analytic.group_analytic_accounting"/>

                        <button name="aplication_massive_analytic_distribution" class="oe_stat_button" icon="fa-refresh" type="object"/>
                    </div>

                </field>


            </field>

        </record>


    </data>
</odoo>