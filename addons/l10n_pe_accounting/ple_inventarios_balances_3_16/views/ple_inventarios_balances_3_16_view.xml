<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="ple_inventarios_balances_3_16_view_form" model="ir.ui.view">
            <field name="name">ple.inventarios.balances.3.16.form</field>
            <field name="model">ple.inventarios.balances.3.16</field>
            <field name="inherit_id" ref="ple_base.ple_base_view_form"/>
            <field name="arch" type="xml">

                <group name="grupo_base" position="replace">

                    <group name="grupo_base" string="Fecha - Periodo Fiscal" invisible="state != 'draft'">

                        <field name="company_id" options="{'no_create': True, 'no_create_edit':True}" groups="base.group_multi_company"/>
                        <field name="fecha_final"/>

                        <field name="registro_participacion_accionaria_id" options="{'no_create': True, 'no_create_edit':True}"/>

                    </group>

                </group>


                    <xpath expr="//form" position="inside">

                        <notebook invisible="state == 'draft'">

                            <page name="PLE_Inventarios_Balances_detalle_saldo_cuenta_50" string="PLE Inventarios y Balances-Detalle Saldo Cuenta 50-Capital">
                            
                                    <field name='ple_inventarios_balances_3_16_1_line_ids' widget="one2many_search">
                                        <tree limit="500"> 
                                            <field name="periodo"/>
                                            <field name="importe_capital_social_participaciones"/>
                                            <field name="valor_nominal_por_accion"/>
                                            <field name="numero_acciones_participaciones_sociales"/>
                                            <field name="numero_acciones_participaciones_sociales_pagadas"/>
                                            <field name="indicador_estado_operacion"/>
                                        </tree>      

                                    </field>
                              </page>

                              <page name="PLE_Inventarios_Balances_detalle_saldo_cuenta_50" string="PLE Inventarios y Balances-Estructura Participaciones/Acciones">
                            
                                    <field name='ple_inventarios_balances_3_16_2_line_ids' widget="one2many_search">

                                        <tree limit="500"> 
                                            <field name="periodo"/>
                                            <field name="tipo_documento_socio_accionista"/>
                                            <field name="numero_documento_socio_accionista"/>
                                            <field name="tipo_accion"/>
                                            <field name="codigo_tipo_accion"/>
                                            <field name="razon_social_socio_accionista"/>
                                            <field name="numero_acciones"/>
                                            <field name="porcentaje_total_participaciones"/>
                                            <field name="indicador_estado_operacion"/>
                                        </tree>      

                                    </field>

                              </page>

                              <!-- ##################################################### -->

                            <page name="PLE-Parametros" string="ParÃ¡metros de Reporte">
                            
                                <group>
                                    
                                    <group name="grupo_base" string="Fecha - Periodo Fiscal">

                                        <field name="company_id" options="{'no_create': True, 'no_create_edit':True}" groups="base.group_multi_company" readonly="True"/>
                                        <field name="fecha_final" readonly="True"/>

                                        <field name="registro_participacion_accionaria_id" options="{'no_create': True, 'no_create_edit':True}" readonly="True"/>

                                    </group>

                                </group>

                            </page>


                        </notebook>

                    </xpath>

            </field>

        </record>


        <record id="ple_inventarios_balances_3_16_view_tree" model="ir.ui.view">
            <field name="name">ple.inventarios.balances.3.16.tree</field>
            <field name="model">ple.inventarios.balances.3.16</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="fecha_final"/>
                    <field name="company_id"/>
                    <field name="registro_participacion_accionaria_id"/>
                </tree>
            </field>
        </record>

        <record id="action_ple_inventarios_balances_3_16" model="ir.actions.act_window">
            <field name="name">Inventarios y Balances-Detalle Saldo Cuenta 50-Estructura Participaciones/Acciones</field>
            <field name="res_model">ple.inventarios.balances.3.16</field>
            <field name="view_mode">tree,form</field>
            <field eval="False" name="view_id"/>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Crear Inventarios y Balances-Detalle Saldo Cuenta 50-Estructura Participaciones/Acciones
              </p><p>
                El Reporte Inventarios y Balances-Detalle Saldo Cuenta 50-Estructura Participaciones/Acciones es un documento tributario
                y su representacion es en los siguientes formatos: txt, excel, etc...
              </p>
            </field>
        </record>

        <record id="action_ple_inventarios_balances_3_16_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="ple_inventarios_balances_3_16_view_tree"/>
            <field name="act_window_id" ref="action_ple_inventarios_balances_3_16"/>
        </record>

        <record id="action_ple_inventarios_balances_3_16_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="ple_inventarios_balances_3_16_view_form"/>
            <field name="act_window_id" ref="action_ple_inventarios_balances_3_16"/>
        </record>

         <menuitem id="menu_ple_inventarios_balances_3_16" parent="ple_base.menu_inventario_balance" sequence="16" action="action_ple_inventarios_balances_3_16"/>
    </data>
</odoo>