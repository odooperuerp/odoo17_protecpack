<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_in_invoice_receipt_fees_tree" model="ir.ui.view">
            <field name="name">account.out.invoice.tree</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_in_invoice_tree"/>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                
                <xpath expr="//tree" position="attributes">
                    <attribute name="create">0</attribute>
                </xpath>

                <field name="amount_total_signed" position="after">
                    <field name="retencion_4ta"/>
                </field>

            </field>
        </record>


        <record id="action_move_in_invoice_type_receipt_fees" model="ir.actions.act_window">
            <field name="name">Recibos por Honorarios</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">tree,kanban,form,activity</field>
            <field name="view_id" ref="view_in_invoice_receipt_fees_tree"/>
            <field name="search_view_id" ref="account.view_account_invoice_filter"/>
            <field name="domain">[('move_type', '=', 'in_invoice')]</field>
            <field name="context">{'default_move_type': 'in_invoice', 'display_account_trust': True}</field>
            <field name="help" type="html">
            </field>
        </record>


        <menuitem id="menu_action_move_in_invoice_type_receipt_fees" action="action_move_in_invoice_type_receipt_fees" sequence="3" parent="account.menu_finance_payables" string="Recibos por Honorarios"/>

    </data>

</odoo>