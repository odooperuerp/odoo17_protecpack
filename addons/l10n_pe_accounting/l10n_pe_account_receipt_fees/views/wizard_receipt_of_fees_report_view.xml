<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="wizard_receipt_of_fees_report_view_form" model="ir.ui.view">
            <field name="name">Reporte de Recibos por Honorarios</field>
            <field name="model">wizard.receipt.of.fees.report</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>

                        <group>

                            <group>
                                <field name="date_from" required="1"/>
                                <field name="date_to" required="1"/>
                            </group>

                        </group>

                        <footer>

                            <button name="action_print" class="oe_highlight" string="Imprimir Reporte" icon="fa-file-excel-o"  type="object"/>

                            <button string="Cancelar" class="btn-default" special="cancel"/>

                        </footer>
                    </sheet>
                </form>             
            </field>
        </record>

        <record id="action_wizard_receipt_of_fees_report" model="ir.actions.act_window">
            <field name="name">Reporte de Recibos por Honorarios</field>
            <field name="res_model">wizard.receipt.of.fees.report</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="wizard_receipt_of_fees_report_view_form"/>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_wizard_receipt_of_fees_report" 
            name="Reporte de Recibos por Honorarios" 
            parent="account.menu_finance_reports"  
            groups="account.group_account_invoice" 
            action="action_wizard_receipt_of_fees_report"/> 
    </data>
</odoo>
