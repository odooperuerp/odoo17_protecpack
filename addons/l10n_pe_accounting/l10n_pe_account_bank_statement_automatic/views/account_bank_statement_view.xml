<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ############################################################### -->

        <record id="view_bank_statement_form_bank_rec_widget_inherit" model="ir.ui.view">
            <field name="name">view_bank_statement_form_bank_rec_widget_inherit</field>
            <field name="model">account.bank.statement</field>
            <field name="inherit_id" ref="account_accountant.view_bank_statement_form_bank_rec_widget"/>
            <field name="arch" type="xml">

                <xpath expr="//form/sheet" position="before">
                    
                    <header>

                        <button name="action_print" 
                            string="Imprimir"
                            type="object"
                            class="btn-primary"
                            icon="fa-print"
                        />

                        <button name="open_wizard_generator" 
                            string="Generar Lineas automáticas"
                            type="object"
                            class="btn-primary"
                            icon="fa-bars"
                        />

                    </header>

                </xpath>

                <sheet>
                    <notebook position="inside">
                        <page string="Detalle de Transacciones">
                            
                            <field name="line_ids">


                                <tree editable="0" multi_edit="1" js_class="bank_rec_list" decoration-muted="state == 'draft'" default_order="internal_index desc">
                    
                                    <!--Invisible fields-->
                                    <field name="statement_complete" column_invisible="True"/>
                                    <field name="statement_valid" column_invisible="True"/>
                                    <field name="state" column_invisible="True"/>
                                    <field name="is_reconciled" column_invisible="True"/>
                                    <field name="to_check" column_invisible="True"/>
                                    <field name="country_code" column_invisible="True"/>
                                    <field name="currency_id" column_invisible="True"/>
                                    <field name="company_id" column_invisible="True"/>

                                    <!--Visible fields-->
                                    <field name="sequence" widget="handle" column_invisible="True"/> <!--Until we add the JS class-->
                                    <field name="date" readonly="is_reconciled and amount != 0" options="{'warn_future': true}"/>
                                    <field name="move_id" optional="hidden" required="0"/>
                                    <field name="payment_ref" required="1" readonly="is_reconciled and amount != 0"/>
                                    <field name="partner_id" readonly="is_reconciled and amount != 0"/>
                                    <field name="narration" string="Notes" readonly="is_reconciled and amount != 0" optional="hidden"/>
                                    <field name="ref" readonly="is_reconciled and amount != 0" optional="hidden"/>
                                    <field name="transaction_type" optional="hidden"/>
                                    <field name="foreign_currency_id" optional="hidden" groups="base.group_multi_currency" domain="[('id', '!=', currency_id)]" options="{'no_open': True, 'no_create': True}" readonly="is_reconciled and amount != 0"/>
                                    <field name="amount_currency" optional="hidden" groups="base.group_multi_currency" invisible="not foreign_currency_id" readonly="is_reconciled and amount != 0"/>
                                    <field name="amount" readonly="is_reconciled and amount != 0"/>
                                    <field name="journal_id" domain="[('type', 'in', ['bank','cash'])]" column_invisible="bool(context.get('default_journal_id'))" readonly="(statement_id or is_reconciled) and amount != 0"/>
                                    <field name="running_balance" class="oe_read_only"/>
                                    <field name="account_number" optional="hidden"/>
                                    <field name="statement_id" optional="show" options="{'no_quick_create': True}" domain="['|',('journal_id', '=', journal_id),('journal_id', '=', False)]" context="{                                 'default_journal_id':journal_id,                                 'form_view_ref': 'account_accountant.view_bank_statement_form_bank_rec_widget',                                 'st_line_id':id,                             }" decoration-danger="statement_complete == False or statement_valid == False" widget="bank_rec_list_many2one_multi_id" readonly="not id"/>
                                   
                                </tree>

                            </field>

                        </page>

                    </notebook>

                </sheet>

            </field>
        </record>

        <!-- ############################################################## -->

        <record id="view_bank_statement_report_xlsx_tree" model="ir.ui.view">
            <field name="name">view.bank.statement.report.xlsx.tree</field>
            <field name="model">account.bank.statement</field>
            <field name="inherit_id" ref="account.view_bank_statement_tree"/>
            <field name="arch" type="xml">


                <field name="balance_end_real" position="after">
                    
                    <button name="action_print" 
                        string="Imprimir"
                        type="object"
                        class="btn-primary"
                        icon="fa-print"
                    />
                </field>

            </field>
        </record>


        <!-- ###################################################################################### -->

        <record id="view_account_bank_statement_line_form" model="ir.ui.view">
            <field name="name">Transacciónes de Caja/Banco</field>
            <field name="model">account.bank.statement.line</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        
                        <group>

                            <group>
                                <field name="journal_id" options='{"no_open":True}' readonly="1"/>
                                <field name="statement_id" readonly="1"/>
                            </group>

                            <group>
                                <field name="date" readonly="1"/>
                                <field name="move_id" readonly="1"/>
                                <field name="payment_ref" readonly="1"/>
                                <field name="partner_id" readonly="1"/>
                            </group>

                            <group>
                                <field name="ref" readonly="1"/>
                                <field name="transaction_type" readonly="1"/>
                                <field name="operation_number" readonly="1"/>
                                <field name="name" readonly="1"/>
                            </group>

                            <group>
                                <field name="foreign_currency_id" readonly="1"/>
                                <field name="amount_currency" readonly="1"/>
                                <field name="amount" readonly="1"/>
                                <field name="account_number" readonly="1"/>
                            </group>

                        </group>

                        <group>
                            <field name="narration" readonly="1"/>
                        </group>

                    </sheet>
                </form>             
            </field>
        </record>



        <record id="view_account_bank_statement_line_tree" model="ir.ui.view">
            <field name="name">Transacciones de Caja/Banco</field>
            <field name="model">account.bank.statement.line</field>
            <field eval="1" name="priority"/>
            <field name="arch" type="xml">

                <tree string="Transacciones" create="false">

                    <field name="statement_complete" column_invisible="True"/>
                    <field name="statement_valid" column_invisible="True"/>
                    <field name="state" column_invisible="True"/>
                    <field name="is_reconciled" column_invisible="True"/>
                    <field name="to_check" column_invisible="True"/>
                    <field name="country_code" column_invisible="True"/>
                    <field name="currency_id" column_invisible="True"/>
                    <field name="company_id" column_invisible="True"/>

                    <!--Visible fields-->
                    <field name="sequence" widget="handle" column_invisible="True"/> <!--Until we add the JS class-->
                    <field name="date" readonly="is_reconciled and amount != 0" options="{'warn_future': true}"/>
                    <field name="move_id" optional="hidden" required="0"/>
                    <field name="payment_ref" required="1" readonly="is_reconciled and amount != 0"/>
                    <field name="partner_id" readonly="is_reconciled and amount != 0"/>
                    <field name="narration" string="Notes" readonly="is_reconciled and amount != 0" optional="hidden"/>
                    <field name="ref" readonly="is_reconciled and amount != 0" optional="hidden"/>
                    <field name="transaction_type" optional="hidden"/>
                    <field name="foreign_currency_id" optional="hidden" groups="base.group_multi_currency" domain="[('id', '!=', currency_id)]" options="{'no_open': True, 'no_create': True}" readonly="is_reconciled and amount != 0"/>
                    <field name="amount_currency" optional="hidden" groups="base.group_multi_currency" invisible="not foreign_currency_id" readonly="is_reconciled and amount != 0"/>
                    <field name="amount" readonly="is_reconciled and amount != 0"/>
                    <field name="journal_id" domain="[('type', 'in', ['bank','cash'])]" column_invisible="bool(context.get('default_journal_id'))" readonly="(statement_id or is_reconciled) and amount != 0"/>
                    <field name="running_balance" class="oe_read_only"/>
                    <field name="account_number" optional="hidden"/>
                    <field name="statement_id" optional="show" options="{'no_quick_create': True}" domain="['|',('journal_id', '=', journal_id),('journal_id', '=', False)]" context="{                                 'default_journal_id':journal_id,                                 'form_view_ref': 'account_accountant.view_bank_statement_form_bank_rec_widget',                                 'st_line_id':id,                             }" decoration-danger="statement_complete == False or statement_valid == False" widget="bank_rec_list_many2one_multi_id" readonly="not id"/>
                    <field name="id" widget="bank_rec_list_view_switcher" invisible="not id"/>

                </tree>

            </field>
        </record>


        <record id="view_account_bank_statement_tree" model="ir.ui.view">
            <field name="name">Extractos Bancários</field>
            <field name="model">account.bank.statement</field>
            <field eval="1" name="priority"/>
            <field name="arch" type="xml">

                <tree string="Extractos Bancários" decoration-danger="journal_id and not is_complete or not is_valid" decoration-muted="not journal_id" create="false">

                    <field name="name" readonly="1"/>
                    <field name="date" readonly="1"/>
                    <field name="journal_id" readonly="1"/>
                    <field name="company_id" groups="base.group_multi_company" readonly="1"/>
                    <field name="balance_start" readonly="1"/>
                    <field name="balance_end_real" readonly="1"/>
                    <field name="balance_end" readonly="1"/>

                    <button name="action_print" 
                        string="Imprimir"
                        type="object"
                        class="btn-primary"
                        icon="fa-print"
                    />
                    <field name="currency_id" column_invisible="True" readonly="1"/>
                    <field name="is_complete" column_invisible="True" readonly="1"/>
                    <field name="is_valid" column_invisible="True" readonly="1"/>
                 
                </tree>
            </field>
        </record>


        <record id="action_account_bank_statement_line" model="ir.actions.act_window">
            <field name="name">Transacciones de Caja/Banco</field>
            <field name="res_model">account.bank.statement.line</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('company_id','=',allowed_company_ids[0])]</field>
            <!-- <field name="view_id" ref="view_account_bank_statement_line_tree"/> -->
        </record>


        <record id="action_account_bank_statement_line_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_account_bank_statement_line_tree"/>
            <field name="act_window_id" ref="action_account_bank_statement_line"/>
        </record>


        <record id="action_account_bank_statement" model="ir.actions.act_window">
            <field name="name">Extractos Bancários</field>
            <field name="res_model">account.bank.statement</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('company_id','=',allowed_company_ids[0])]</field>
            <field name="view_id" ref="view_account_bank_statement_tree"/>
        </record>


        <record id="action_account_bank_statement_line_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_account_bank_statement_line_form"/>
            <field name="act_window_id" ref="action_account_bank_statement_line"/>
        </record>


        <menuitem 
            id="menu_account_bank_statement_root" 
            name="Extractos Bancários" 
            parent="account.menu_finance_entries"
            sequence="2"/>

        <menuitem id="menu_account_bank_statement" name="Extractos Bancários" parent="l10n_pe_account_bank_statement_automatic.menu_account_bank_statement_root" groups="account.group_account_invoice" action="action_account_bank_statement" sequence="0"/>

        <menuitem id="menu_account_bank_statement_line" name="Transacciones" parent="l10n_pe_account_bank_statement_automatic.menu_account_bank_statement_root" groups="account.group_account_invoice" action="action_account_bank_statement_line" sequence="0"/>

         <!-- ###################################################################################### -->


    </data>
</odoo>